// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Record {
  id           String   @id @default(cuid())
  name         String
  cpfCnpj      String   @unique
  orderNumber  String
  code         String   @unique
  address      String
  number       String
  zipCode      String
  complement   String?
  reference    String?
  product      String
  stateCity    String
  bairro       String
  valor        Float
  status       String   @default("pendente")
  used         Boolean  @default(false)
  active       Boolean  @default(true)
  pixCode      String?
  qrCodePath   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model TwilioConfig {
  id          Int      @id @default(1)
  accountSid  String
  authToken   String
  phoneNumber String
  updatedAt   DateTime @updatedAt
}